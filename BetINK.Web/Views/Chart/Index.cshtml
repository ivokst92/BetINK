@model IEnumerable<ChartServiceModel>
@{
    ViewData["Title"] = "Top users";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Position
            </th>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Points
            </th>
        </tr>
    </thead>
    <tbody>
        @{int postition = 1;}
        @foreach (var user in Model)
         {
            <tr>
                <td>@(postition++)</td>
                <td>@user.Username</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Points</td>
            </tr>
        }
    </tbody>
</table>
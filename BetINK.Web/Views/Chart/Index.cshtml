@model IEnumerable<ChartServiceModel>
@{
    ViewData["Title"] = "Top users";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Position
            </th>
            <th>
                Username
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Points
            </th>
        </tr>
    </thead>
    <tbody>
        @{int position = 1;}
        @foreach (var user in Model)
         {
            <tr class="@(position==1 ? "winner" : null)
                @(position==2 || position==3 ? "runner" : null)">
                <td>@(position++)</td>
                <td><a asp-controller="Prediction" asp-action="Check" asp-route-username="@user.Username">@user.Username</a></td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Points</td>
            </tr>
        }
    </tbody>
</table>